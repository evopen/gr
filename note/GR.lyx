\[
\begin{split}r^{2}\sin^{2}\theta\frac{d\phi}{d\tau} & =\frac{L}{m_{0}}\\
\frac{d\phi}{d\tau} & =\frac{L}{m_{0}r^{2}\sin^{2}\theta}
\end{split}
\]

\end_inset


\end_layout

